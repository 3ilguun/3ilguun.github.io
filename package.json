{
  "name": "3ilguun.github.io",
  "version": "1.0.0",
  "repository": "https://github.com/3ilguun/3ilguun.github.io.git",
  "author": "3ilguun <hi@bilguun.design>",
  "private": true,
  "scripts": {
    "dev": "parcel src/view/index.pug src/view/kr/index.pug",
    "build": "yarn clear && concurrently 'yarn:build-en' 'yarn:build-kr'",
    "build-en": "parcel build src/view/index.pug --public-url ./ --no-source-maps",
    "build-kr": "parcel build src/view/kr/index.pug --out-dir dist/kr/ --public-url ./ --no-source-maps",
    "clear": "rimraf .cache && rimraf dist"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "babel-core": "^6.26.3",
    "babel-plugin-minify-mangle-names": "^0.5.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.1",
    "concurrently": "^5.0.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-inliner": "^1.0.10",
    "parcel-plugin-lazy": "^0.0.4",
    "pug": "^2.0.4",
    "rimraf": "^3.0.0",
    "sass": "^1.22.12"
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "animejs": "^3.1.0",
    "html5shiv": "^3.7.3",
    "imagesloaded": "^4.1.4",
    "rem-unit-polyfill": "^1.3.4",
    "respond.js": "^1.4.2",
    "vanilla-lazyload": "^12.0.2"
  }
}
